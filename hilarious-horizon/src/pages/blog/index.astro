---
import Layout from "../../layouts/Layout.astro"
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<Layout title="Blog">
  <h1>My posts</h1>
  <ul>
    {posts.map(post => (
      <li>
        <h2>{post.data.title}</h2>
        <a href={`/blog/${post.id}`}>Read More</a>
      </li>
    ))}
  </ul>
</Layout>